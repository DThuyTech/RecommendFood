<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gardian_background"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".RecommanFoodBmi">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        app:cardCornerRadius="20dp"
        android:layout_height="90dp">

        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_width="80dp"
            app:cardCornerRadius="15dp"
            android:backgroundTint="@color/white"
            android:outlineSpotShadowColor="@color/black"
            android:outlineAmbientShadowColor="@color/black"
            android:layout_height="70dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/food"
                android:layout_gravity="center"

                android:outlineAmbientShadowColor="@color/white"/>
        </androidx.cardview.widget.CardView>



    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:id="@+id/txt_nameuser"
        android:background="@drawable/shape_radius_white"
        android:text="   doan trung huy       "/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:id="@+id/txt_calouser"
            android:background="@drawable/shape_radius_white"
            android:text="   calo       "/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:id="@+id/txt_calotang"
            android:background="@drawable/shape_radius_white"
            android:text="   TÄƒng :        "/>
    </LinearLayout>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"

        android:background="@drawable/table"/>
</LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingBottom="20dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cdv_food1"
                android:layout_width="250dp"
                android:layout_height="500dp"
                android:layout_margin="20dp"

                android:backgroundTint="@color/white"

                app:cardCornerRadius="40dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:orientation="vertical">'

                    <androidx.cardview.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="20dp">

                        <ImageView
                            android:id="@+id/imvFood1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/white">

                        </ImageView>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/txtNamefood1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:hint="Ten mon"

                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/txtCalofood1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:hint="Calo"
                        android:textColor="@color/black"

                        android:textColorHint="@color/black"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/txtSeasonfood1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:hint="Buoi sang "
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="13dp" />

                    <Button
                        android:id="@+id/btn_doimonsang"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="45dp"
                        android:background="@drawable/button_shape_coner_doimon"
                        android:paddingLeft="5dp"
                        android:text="Doi mon"
                        android:textAllCaps="false"
                        android:textColor="@color/white">

                    </Button>

                    <Button
                        android:id="@+id/btn_datgiomonsang"
                        android:layout_width="130dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/button_shape_coner_doimon"
                        android:text="Hen gio"
                        android:textAllCaps="false"
                        android:textColor="@color/white">

                    </Button>

                    <Button
                        android:id="@+id/btn_datmonsang"
                        android:layout_width="110dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/button_shape_coner_doimon"
                        android:text="Dat mon"
                        android:textAllCaps="false"
                        android:textColor="@color/white">

                    </Button>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cdv_food2"
                android:layout_width="250dp"
                android:layout_height="500dp"
                android:layout_margin="20dp"
                android:backgroundTint="@color/white"

                app:cardCornerRadius="40dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:orientation="vertical">'

                    <androidx.cardview.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="20dp">

                        <ImageView
                            android:id="@+id/imvFood2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                        </ImageView>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/txtNamefood2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:hint="Ten mon"

                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/txtCalofood2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:hint="Calo"
                        android:textColor="@color/black"

                        android:textColorHint="@color/black"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/txtSeasonfood2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:hint="Buoi trua"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="13dp" />

                    <Button
                        android:id="@+id/btn_doimontrua"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="45dp"
                        android:background="@drawable/button_shape_coner_doimon"
                        android:text="Doi mon"
                        android:textAllCaps="false"
                        android:textColor="@color/white">

                    </Button>

                    <Button
                        android:id="@+id/btn_datgiomontrua"
                        android:layout_width="130dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/button_shape_coner_doimon"
                        android:text="Hen gio"
                        android:textAllCaps="false"
                        android:textColor="@color/white">

                    </Button>

                    <Button
                        android:id="@+id/btn_datmontrua"
                        android:layout_width="110dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/button_shape_coner_doimon"
                        android:text="Dat mon"
                        android:textAllCaps="false"
                        android:textColor="@color/white">

                    </Button>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cdv_food3"
                android:layout_width="250dp"
                android:layout_height="500dp"
                android:layout_margin="20dp"
                android:layout_marginLeft="10dp"

                app:cardCornerRadius="40dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:orientation="vertical">'

                    <androidx.cardview.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="20dp">

                        <ImageView
                            android:id="@+id/imvFood3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/white">

                        </ImageView>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/txtNamefood3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:hint="Ten mon"

                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/txtCalofood3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:hint="Calo"
                        android:textColor="@color/black"

                        android:textColorHint="@color/black"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/txtSeasonfood3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:hint="Buoi toi"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="13dp" />

                    <Button
                        android:id="@+id/btn_doimontoi"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="45dp"
                        android:background="@drawable/button_shape_coner_doimon"
                        android:text="Doi mon"
                        android:textAllCaps="false"
                        android:textColor="@color/white">

                    </Button>

                    <Button
                        android:id="@+id/btn_datgiomontoi"
                        android:layout_width="130dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/button_shape_coner_doimon"
                        android:text="Hen gio"
                        android:textAllCaps="false"
                        android:textColor="@color/white">

                    </Button>

                    <Button
                        android:id="@+id/btn_datmontoi"
                        android:layout_width="110dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/button_shape_coner_doimon"
                        android:text="Dat mon"
                        android:textAllCaps="false"
                        android:textColor="@color/white">

                    </Button>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </HorizontalScrollView>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"

        android:background="@drawable/vegetable"/>

</LinearLayout>